
<h2>Edit {{ foundMovie.title }}</h2>

<form action="/movies/{{foundMovie._id}}/update" method="POST">
<label> Title
    <input type="text" name="title" value="{{foundMovie.title}}">
</label>

<label> Genre
    <input type="string" name="genre" value="{{foundMovie.genre}}">
</label>

<label> Plot
    <textarea name="plot" cols="30" rows="10">{{ foundMovie.plot }}</textarea>
</label>


<button type="submit"> Save changes </button>
</form>