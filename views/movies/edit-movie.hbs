
<h2>Edit {{ movie.title }}</h2>

<form action="/movies/{{movie._id}}/update" method="POST">
<label> Title
    <input type="text" name="title" value="{{movie.title}}">
</label>

<label> Genre
    <input type="string" name="genre" value="{{movie.genre}}">
</label>

<label> Plot
    <textarea name="plot" cols="30" rows="10">{{ movie.plot }}</textarea>
</label>


{{!-- array of celebrities in the cast --}}
<label for="">Cast:</label>
<select name="cast" multiple>
    {{#each allCelebs}}
    {{#if isInCast}}
        <option value="{{_id}}" selected='selected'>{{name}}</option>
    {{else}}
        <option value="{{_id}}">{{name}}</option>
    {{/if}}
    {{/each}}
</select>

<button type="submit">Save the changes</button>
</form>

